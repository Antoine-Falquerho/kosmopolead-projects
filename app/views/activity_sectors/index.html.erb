<h1><%=l(:label_sectors)%></h1>

<div class="contextual">
  <%= toggle_link l(:button_add), 'new-activity_sector-form'%>
</div>
<div id="activity_sectors">
  <%= render :partial => 'activity_sectors/index', :locals=>{:activity_sectors=>@activity_sectors}%>
</div>

<% remote_form_for(:activity_sector, @activity_sector,
                 :url => {:controller => 'activity_sectors', :action => 'create'},
                 :method => :post,
                 :html => {:id => 'new-activity_sector-form', :style => (@relation ? '' : 'display: none;')}) do |f| %>
<%= render :partial => 'activity_sectors/edit', :locals => {:f => f}%>
<% end %>