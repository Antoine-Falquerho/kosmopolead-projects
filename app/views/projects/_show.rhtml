<% if project.parent %>
    <%  title = "projet - #{project.parent.acronym} - #{project.acronym}"  %>
<% else %>
    <%  title = "projet - #{project.acronym}"  %>
<% end %>

<%= box(
    "#{title}",
    "#{render:partial=>'projects/box/show',:locals=>{:project=>project}}",
    ["<span class='visu'>Visualisation</span>",
      "#{link_to_remote(image_tag('visu_profile_on.png'),{:url=>project_path(project),:method=>:get},:class=>'icon',:name=>'AperÃ§u')}",
      "#{link_to_remote(image_tag('visu_calendar_off.png'),{:url=>calendar_project_issues_path(project),:method=>:get},:class=>'icon',:name=>'Calendar') if User.current.allowed_to?(:view_calendar, @project, :global => true)}",
     "#{link_to_remote(image_tag('visu_gantt_off.png'),{:url=> gantt_project_issues_path(project),:method=>:get}, :class=>'icon',:name=>'Gantt') if User.current.allowed_to?(:view_gantt, @project, :global => true)}",
     "#{link_to_remote(image_tag('visu_list_off.png'),{:url=> project_issues_path(project),:method=>:get}, :class=>'icon ',:name=>'Liste')}"
    ]
) %>

<%= initialize_icons_tooltip() %>