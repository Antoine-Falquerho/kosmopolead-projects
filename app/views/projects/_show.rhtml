<%= box(
    "profile - #{project.name}",
    "#{render:partial=>'projects/box/show',:locals=>{:project=>project}}",
    ["#{link_to_remote("",{:url=>{:controller => 'projects', :action => 'show', :id => project}},:method=>:get,:class=>'active icon profile')}",
      "#{link_to_remote("",{:url=>{:controller => 'issues', :action => 'calendar', :project_id => project}},:method=>:get,:class=>'inactive icon calendar') if User.current.allowed_to?(:view_calendar, @project, :global => true)}",
     "#{link_to_remote("",{:url=>{:controller => 'issues', :action => 'gantt', :project_id => project}},:method=>:get, :class=>'inactive icon gantt') if User.current.allowed_to?(:view_gantt, @project, :global => true)}",
     "#{link_to_remote("",{:url=>{:controller => 'issues', :action => 'index', :project_id => project}},:method=>:get, :class=>'inactive icon list ')}"
    ]
) %>