<% if @projects.size>0 %>
  <%= box_sidebar("#{l(:label_project_plural)}", "#{tree_ul('projects', @projects, true) {|project| link_to_remote project.name, {:url=>{:controller => 'projects', :action => 'show', :project_id => project}}} }") %>
<% end %>
<div id="sidebar_new">
  <%= render:partial=>"projects/sidebar_new" %>
</div>
<% if @projects.size>0 %>
  <div id="project_author">
    <%= render:partial=>"projects/author",:locals=>{:project=>@project} %>
  </div>
<% end %>



