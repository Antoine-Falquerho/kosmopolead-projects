<% form_for [@activity_sector, @activity_sector_translation],:html=>{:class=>"tabular"} do |f| %>
  <%= f.error_messages %>

  <p>
    <label><%= l(:label_name) %></label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label><%= l(:label_description) %></label>
    <%= f.text_field :description %>
  </p>
  <p>
    <label><%= l(:label_language) %></label>
    <%= f.select :local, lang_options_for_select(false), :selected=> current_language.to_s %>
  </p>
  <p class="buttons right">
    <%= f.submit l(:button_create),:class=>"button btn_blue corner-all" %>
  </p>
  <div class="clearer"></div>
<% end %>

